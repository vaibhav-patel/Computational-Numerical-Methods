#include<stdio.h>
#include<math.h>
const double e=M_E;
double f(double x)
{
    return (1-pow(e,-x*x));
}
double fd(double x)
{
    return (2*x)*(pow(e,-x*x));
}

int main()
{
    int itr=100;
    double ratio[itr];
    double xs[itr];
    xs[0]=1.0;
    int i=1;
    for(;i<itr;i++)
    {
        xs[i]=xs[i-1] - (f(xs[i-1])) /  (fd(xs[i-1]));
        if((xs[i]-xs[i-1]>=-0.00000001)&&(xs[i]-xs[i-1]<=0.00000001))
            break;
            
    }
    int j=0;
    double alpha=xs[i-1];
    for(;j<i-1;j++)
    {   
        ratio[j]=(alpha - xs[j+1])/ ((alpha-xs[j])*(alpha-xs[j]));
        printf("ratio on itr %d      %lf\n",j+1,ratio[j]);
    }
    printf("%lf %d\n",xs[i],i);
    return 0;
}
