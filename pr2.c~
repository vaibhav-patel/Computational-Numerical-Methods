#include<stdio.h>
#include<math.h>
const double e=M_E;
double f(double x)
{
    return (x+pow(e,x));
}
double fd(double x)
{
    return 1+f(x)-x;
}
int main()
{
    int itr=100;
    double ratio[itr];
    double xs[itr];
    xs[0]=1.0;
    int i=1;
    for(;i<itr;i++)
    {
        xs[i]=xs[i-1] - (f(xs[i-1])) /  (fd(xs[i-1]));
        if((xs[i]-xs[i-1]>=-0.00000001)&&(xs[i]-xs[i-1]<=0.00000001))
            break;
            
    }
    int j=0;
    double alpha=xs[i-1];
    for(;j<i-2;j++)
    {   
        ratio[j]=(alpha - xs[j+1])/ ((alpha-xs[j])*(alpha-xs[j]));
        printf("ratio on itr %d      %lf\n",j,ratio[j]);
    }
    printf("%lf %d\n",xs[i],i);
    
    // by bisection method
    double a=-1.000;
    double b=0.000;
    double c;
    int count=0;
    while(1)
    {
        count++;
        c=(a+b)/2.0;
        if((f(c)<0.00000001)&&(f(c)>-0.00000001))
            break;
        else if(f(c)*f(a) <0.0)
        {   
            b=c;
        }
        else if(f(c)*f(a) > 0.0 )
        {   
            a=c;
        }
    }
    printf("result by bisection method      %lf   in iter %d \n",c,count);
    
    
    return 0;
}
